        <hr.sil.android.schlauebox.fonts.ButtonWithFont
            android:id="@+id/send_parcel_next"
            android:layout_width="220dp"
            android:layout_height="40dp"

            android:text="@string/app_generic_next"
            android:textColor="@color/colorWhite"


            android:background="@drawable/disabled_button"

            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/no_internet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:alpha="0.8"
        android:background="@drawable/bg_wifi_internet"
        android:visibility="gone">

        <hr.sil.android.smartlockers.enduser.fonts.view.fonts.TextViewRegularFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_generic_no_network"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/no_ble_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:alpha="0.8"
        android:background="@drawable/bg_bluetooth"
        android:visibility="gone">

        <hr.sil.android.smartlockers.enduser.fonts.view.fonts.TextViewRegularFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_generic_no_ble"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/no_location_gps_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/rectangle_transparent_dark"
        android:clickable="true"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivNoLocationImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_no_location_services"/>

            <hr.sil.android.smartlockers.enduser.fonts.view.fonts.TextViewRegularFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/no_location_services"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivNoLocationImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</androidx.drawerlayout.widget.DrawerLayout>



