<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                style="@style/HeaderToolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/schlauebox_logo" />

        </androidx.appcompat.widget.Toolbar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <View
            android:id="@+id/toolbar_spliter"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/colorPinkishGray"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <hr.sil.android.smartlockers.enduser.fonts.view.fonts.TextViewBoldFont
            android:id="@+id/nav_send_parcel_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            android:text="@string/nav_send_parcel_title"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"

            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_spliter" />

        <ImageView
            android:id="@+id/send_parcel_main_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="90dp"

            android:src="@drawable/ic_package"

            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nav_send_parcel_title" />

        <hr.sil.android.smartlockers.enduser.fonts.view.fonts.TextViewRegularFont
            android:id="@+id/send_parcel_main_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:lines="2"
            android:paddingLeft="15dp"

            android:paddingRight="15dp"
            android:text="@string/nav_send_parcel_content_text"

            android:textColor="@color/colorBlack"

            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/send_parcel_main_image" />

        <hr.sil.android.schlauebox.fonts.ButtonWithFont
            android:id="@+id/send_parcel_delivery_next"
            android:layout_width="220dp"
            android:layout_height="40dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"

            android:text="@string/app_generic_finish"

            android:textColor="@color/colorWhite"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/send_parcel_main_text" />

        <hr.sil.android.schlauebox.fonts.ButtonWithFont
            android:id="@+id/send_parcel_retry"
            android:layout_width="220dp"
            android:layout_height="40dp"

            android:layout_marginTop="10dp"

            android:background="@drawable/rounded_button"
            android:text="@string/nav_send_parcel_error_button"

            android:textColor="@color/colorWhite"

            android:visibility="gone"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/send_parcel_main_text" />

        <ProgressBar
            android:id="@+id/send_parcel_progress_bar"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_marginBottom="290dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/no_internet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/bg_wifi_internet"
        android:clickable="false"
        android:visibility="gone">

        <hr.sil.android.smartlockers.enduser.fonts.view.fonts.TextViewRegularFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_generic_no_network"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/no_ble_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/bg_bluetooth"
        android:clickable="false"
        android:visibility="gone">

        <hr.sil.android.smartlockers.enduser.fonts.view.fonts.TextViewRegularFont
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_generic_no_ble"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/no_location_gps_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@drawable/rectangle_transparent_dark"
        android:clickable="true"
        android:visibility="gone">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivNoLocationImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_no_location_services"/>

            <hr.sil.android.smartlockers.enduser.fonts.view.fonts.TextViewRegularFont
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/no_location_services"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivNoLocationImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>


</androidx.drawerlayout.widget.DrawerLayout>



