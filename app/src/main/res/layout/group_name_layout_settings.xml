<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <TextView
        android:id="@+id/groupNameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_generic_group"
        android:paddingLeft="10dp"
        android:textSize="13sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/register_layout_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_pin_layout"
        android:layout_below="@+id/groupNameTitle"
        android:layout_marginTop="10dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainBottomHeaderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" >

            <EditText
                android:id="@+id/register_group_name_first_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLength="16"/>

            <TextView
                android:id="@id/first_row_character_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/colorBlack"
                android:text="0/15"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"  />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/mainBottomHeaderId"
            app:layout_constraintLeft_toLeftOf="parent" >

            <EditText
                android:id="@+id/registerGroupNameSecondRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLength="15"/>

            <TextView
                android:id="@id/second_row_character_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="0/15"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"  />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/groupNameWrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_layout_group_name"
        android:layout_marginTop="10dp"
        android:text=""
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"/>


</RelativeLayout>
