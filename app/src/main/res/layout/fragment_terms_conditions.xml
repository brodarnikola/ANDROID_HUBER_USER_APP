<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <hr.sil.android.smartlockers.enduser.fonts.view.fonts.TextViewBoldFont
        android:id="@+id/ttc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        android:text="@string/app_generic_privacy_policy"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <!-- If we don't want that user can go next page in webView, then just replace "height = matchParent"
    with "height = wrapContent" -->
    <WebView
        android:id="@+id/webViewTermsCondition"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/ttc_title"/>

    <ProgressBar
        android:id="@+id/progressCircular"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>