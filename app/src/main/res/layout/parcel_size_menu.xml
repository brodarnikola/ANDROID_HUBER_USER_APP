<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flex_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  >

    <LinearLayout
        android:id="@+id/llXs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/send_parcel_item_xs"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_size_xs_unselected" />

        <TextView
            android:id="@+id/send_parcel_item_xs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorWhite" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/send_parcel_item_s"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_size_s_unselected" />

        <TextView
            android:id="@+id/send_parcel_item_s_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorWhite" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/send_parcel_item_m"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_size_m_unselected" />

        <TextView
            android:id="@+id/send_parcel_item_m_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorWhite" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/send_parcel_item_l"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_size_l_unselected" />

        <TextView
            android:id="@+id/send_parcel_item_l_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorWhite" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llXL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/send_parcel_item_xl"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_size_xl_unselected" />

        <TextView
            android:id="@+id/send_parcel_item_xl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>

